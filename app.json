{
  "name": "scrumtious",
  "description": "A simple online scrumboard great for small, agile scrum teams",
  "website": "https://scrumtio.us",
  "repository": "https://github.com/adbooth/scrumtious",
  "scripts": {
    "postdeploy": "purge.py"
  },
  "env": {
    "DEBUG": {
      "required": true
    },
    "PYTHONUNBUFFERED": {
      "required": true
    },
    "SECRET_KEY": {
      "generator": "secret"
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "mailgun",
    "mongolab",
    "rediscloud"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
